<% provide(:title, "新規会員登録") %>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h2>新規会員登録</h2>
      <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member', local: true do |f| %>
      <%= render "members/shared/error_messages", resource: resource %>
      <div class="field form-group col-xs-12">
        <%= f.label :"名前", class: "col-sm-3 control-label" %>
        <%= f.label :"(姓)", class: "col-sm-1.5 control-label" %>
        <%= f.text_field :name_sei, autofocus: true, class: "col-sm-3 form-control-static" %>
        <%= f.label :"(名)", class: "col-sm-1.5 control-label" %>
        <%= f.text_field :name_mei, autofocus: true, class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
        <%= f.label :"(セイ)", class: "col-sm-1.5 control-label" %>
        <%= f.text_field :name_kana_sei, autofocus: true, class: "col-sm-3 form-control-static" %>
        <%= f.label :"(メイ)", class: "col-sm-1.5 control-label" %>
        <%= f.text_field :name_kana_mei, autofocus: true, class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4 control-label" %>
        <%= f.text_field :postal_code, autocomplete: "postal_code", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"住所", class: "col-sm-4 control-label" %>
        <%= f.text_field :address, autocomplete: "address", class: "col-sm-7 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-4 control-label" %>
        <%= f.text_field :tel, autocomplete: "tel", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(確認用)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="actions col-xs-9">
        <%= f.submit "新規登録",class: 'btn btn-success col-xs-7' %>
      </div>
      <% end %>
      </div>
    </div>
  <div class="row">
      <div class="col-xs-9">
        <p class="new-link">登録済みの方は
          <%= link_to "こちら", new_member_session_path, class: "btn-link" %>　からログインしてください。
        </p>
      </div>
      </div>
    </div>
  </div>
</div>