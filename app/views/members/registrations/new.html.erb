<h4 class="new-title"><span class="new">新規会員登録</span></h4>
<div class="container">
  <div class="row">
    <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member', local: true do |f| %>

    <div class="mt-3 ml-5 offset-3">
      <%= render 'members/shared/error_messages', obj: @member %>
      <table class="table table-borderless">
        <thead>
          <tr>
            <td>名前</td>
            <td>（姓）</td>
            <td><%= f.text_field :name_sei, placeholder: "姓", autofocus: true, autocomplete: "name_sei" %></td>
            <td>（名）</td>
            <td><%= f.text_field :name_mei, placeholder: "名", autofocus: true, autocomplete: "name_mei" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>（セイ）</td>
            <td><%= f.text_field :name_kana_sei, placeholder: "セイ", autofocus: true, autocomplete: "name_kana_sei" %></td>
            <td>（メイ）</td>
            <td><%= f.text_field :name_kana_mei, placeholder: "名", autofocus: true, autocomplete: "name_kana_mei" %></td>
          </tr>
            <tr>
              <td>メールアドレス</td>
              <td></td>
              <td>
                <%= f.email_field :email,placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
              <tr>
                <td>郵便番号（ハイフンなし）</td>
                <td></td>
                <td>
                  <%= f.text_field :postal_code, placeholder: "0000000", autofocus: true, autocomplete: "postal_code" %>
                </td>
              </tr>
              <tr>
                <td>住所</td>
                <td></td>
                <td colspan="3"><%= f.text_field :address, placeholder: "都道府県から記入", autofocus: true, autocomplete: "address", class: "hoge", size: 60 %></td>
              </tr>
              <tr>
                <td>電話番号（ハイフンなし）</td>
                <td></td>
                <td><%= f.text_field :tel, placeholder: "0000000000", autofocus: true, autocomplete: "tel" %></td>
              </tr>
              <tr>
                <td>パスワード（6文字以上）</td>
                <td></td>
                <td><%= f.password_field :password, autocomplete: "new-password" %></td>
              </tr>
              <tr>
                <td>パスワード（確認用）</td>
                <td></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
        </thead>
      </table>
    </div>
    <div class="text-center">
      <%= f.submit "新規登録", class: 'btn btn-success px-4' %>
    </div>
    <% end %>
    <div class="mt-3 ml-5 offset-3">
      <h5>既に登録済の方は</h5>
      <h7><%= link_to "こちら", new_member_session_path %>からログインしてください</h7>
　  </div>
　</div>
</div>