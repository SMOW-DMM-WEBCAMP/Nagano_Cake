<div class='container p-3'>
  <span class='bg-light ml-5'>注文履歴詳細</span>

  <div class='row mt-3'>
    <div class='col-md-12'>
      <table class='table table-borderless'>
        <tbody>
          <tr>
            <th>購入者</th>
            <td><%= @order.member.name_sei + @order.member.name_mei %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postal_code %> <%= @order.address %></br>
              <%= @order.address_name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order), local:true do |f| %>
                <%= f.select :order_status, Order.order_statuses.keys, {}, {}  %>
                <%= f.submit '更新', class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class='row mt-3'>
    <div class='col-md-9'>
      <table class='table table-borderless'>
        <thead class='table-active'>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.ordered_products.each do |ordered_product| %>
            <tr>
              <td><%= ordered_product.product.product_name %></td>
              <td><%= ordered_product.price %></td>
              <td><%= ordered_product.quantity %></td>
              <td><%= ordered_product.price * ordered_product.quantity %></td>
              <td>
                <%= form_with model: ordered_product, url: admin_ordered_product_path(ordered_product), local:true do |f| %>
                  <%= f.select :production_status, OrderedProduct.production_statuses.keys, {}, {}  %>
                  <%= f.submit '更新', class: "btn btn-success btn-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='col-md-3'>
      <table class='table table-borderless'>
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @order.purchase_price %></td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.shipping %></td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= @order.shipping + @order.purchase_price %></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>