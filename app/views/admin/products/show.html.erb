<div class="row">
  <div class="col-xs-12 new">
    <h4 class="title">商品詳細</h4>
    <div class="col-xs-6">

      <div class="product_display">
        <h6>商品画像</h6>
          <%= attachment_image_tag @product, :product_image, :fill, 300, 200 %>
      </div>

      <div class="product_display">
        <h6>商品名</h6>
　　　　<%= @product.product_name %>
     </div>

      <div class="product_display area">
        <h6>商品説明</h6>
　　　　<%= @product.description %>
      </div>

      <div class="product_display">
        <h6>ジャンル</h6>
      　<%= @product.genre.genre_name %>
      </div>

      <div class="product_display">
        <h6>税込価格<br> (税抜価格)</h6>
       <%= (@product.price*1.1).floor %>(<%= @product.price %>)円
      </div>

      <div class="product_display">
        <h6>販売ステータス</h6>
        <div class="space">
          <% if @product.sale_status == true %>
						販売中
					<% else %>
						販売停止中
					<% end %>
        </div>
      </div>

    <div class="actions col-xs-7">
      <%= link_to '編集する', edit_admin_product_path(@product), class:"ml-4 btn btn-success" %>
    </div>


  </div>
</div>