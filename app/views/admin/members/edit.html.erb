<h4 class="title"><span class="mypage"><%= @member.name_sei %><%= @member.name_mei %>さんの会員情報編集</span></h4>

<div class="container customer-edit">
  <div class="row mt-3 ml-5">
    <div>
    <%= form_with model: @member, url: admin_member_path, local: true do |f| %>
      <table class="table table-borderless">
        <thead>
		      <tr>
            <td>会員ID</td>
            <td><%= @member.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :name_sei, placeholder: "令和", autofocus: true, autocomplete: "name_sei" %></td>
            <td><%= f.text_field :name_mei, placeholder: "道⼦", autofocus: true, autocomplete: "name_mei" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :name_kana_sei, placeholder: "レイワ", autofocus: true, autocomplete: "name_kana_sei" %></td>
            <td><%= f.text_field :name_kana_mei, placeholder: "ミチコ", autofocus: true, autocomplete: "name_kana_mei" %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td>
              <%= f.text_field :postal_code, placeholder: "0000000", autofocus: true, autocomplete: "postal_code" %>
              </td>
          </tr>
          <tr>
            <td>住所</td>
              <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋⾕区代々⽊神園町0-0", autofocus: true, autocomplete: "address", class: "hoge", size: 60 %></td>
          </tr>
          <tr>
            <td>電話番号</td>

            <td><%= f.text_field :tel, placeholder: "0000000000", autofocus: true, autocomplete: "tel" %></td>
          </tr>
          <tr>
            <td>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
            <th></th>
          </tr>
          <tr>
            <td>会員ステータス</th>
            <th><%= f.radio_button :taikai_status, :true %>
            <%= f.label :taikai_status, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :taikai_status, :false, class: "ml-5" %>
            <%= f.label :taikai_status, "退会", {value: :false, style: "display: inline-block;"} %></th>
            <th></th>
          </tr>
		      <th></th>
            <th><%= f.submit "変更を保存", class: "btn btn-success" %></th>
          <th></th>
		  </tr>
        </thead>
      </table>
    </div>
    <% end %>
    </div>
  </div>
</div>