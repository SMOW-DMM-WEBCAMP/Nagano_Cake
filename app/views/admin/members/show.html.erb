<h4 class="title"><span class="mypage"><%= @member.name_sei %><%= @member.name_mei %>さんの会員詳細</span></h4>
<div class="container customer-show">
  <div class="row mt-3 ml-5">
    <div>
      <table class="table table-borderless">
        <thead>
          <tr>
            <td>会員ID</td>
            <td><%= @member.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @member.name_sei %>　<%= @member.name_mei %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @member.name_kana_sei %>　<%= @member.name_kana_mei %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @member.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @member.tel %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <% if @member.taikai_status == true %>
            <th class="text-success">有効</th>
            <% else %>
            <th class="text-secondary">退会</th>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <th>
              <div>
                <%= link_to "編集する", edit_admin_member_path, class: "btn btn-success mr-5" %>
                <%= link_to "注文履歴一覧を見る", {controller: 'orders', action: 'index', id: @member.id}, class: "btn btn-primary" %>
              </div>
            </th>
          </tr>
        </thead>
      </table>
    </div>
  </div>