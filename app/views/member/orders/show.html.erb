<div class='container p-3'>
  <span class='bg-light ml-5'>注文履歴詳細</span>

  <div class='row mt-3'>
    <div class='col-md-7'>
      <h5 class='font-weight-bold'>注文情報</h5>
      <table class='table table-bordered'>
        <tbody>
          <tr>
            <th class='table-active'>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class='table-active'>配送先</th>
            <td>
              〒<%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.address_name %>
            </td>
          </tr>
          <tr>
            <th class='table-active'>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th class='table-active'>ステータス</th>
            <td><%= @order.order_status %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class='col-md-3'>
      <h5 class='font-weight-bold'>請求情報</h5>
      <table class='table table-bordered'>
        <tbody>
          <tr>
            <th class='table-active'>商品合計</th>
            <td><%= @order.purchase_price %></td>
          </tr>
          <tr>
            <th class='table-active'>配送料</th>
            <td><%= @order.shipping %></td>
          </tr>
          <tr>
            <th class='table-active'>ご請求額</th>
            <td><%= @order.purchase_price + @order.shipping %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class='row mt-3'>
    <div class='col-md-8'>
      <h5 class='font-weight-bold'>注文内容</h5>
      <table class='table table-bordered'>
        <thead class='table-active'>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.ordered_products.each do |ordered_product| %>
            <tr>
              <td><%= ordered_product.product.product_name %></td>
              <td><%= ordered_product.price %></td>
              <td><%= ordered_product.quantity %></td>
              <td><%= ordered_product.price * ordered_product.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>