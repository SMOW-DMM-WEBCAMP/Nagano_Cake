<div class='container p-3'>
  <span class='bg-light ml-5'>注文情報入力</span>
    <div class='row mt-3'>
      <div class='col-md-12'>
      <h5 class='font-weight-bold'>支払方法</h5>
      <%= form_with model:@order, url: confirm_member_orders_path, local: true do |f| %>
        <div class='row mt-1'>
          <div class='col-md-3 ml-3'>
            <%= f.radio_button :payment_method, :クレジットカード, checked: "checked", class:'blue' %>
            <%= f.label :payment_method, "クレジットカード" %><br>

            <%= f.radio_button :payment_method, :銀行振込, class:'blue' %>
            <%= f.label :payment_method, "銀行振込" %>
          </div>
        </div>

        <h5 class='font-weight-bold'>お届け先</h5>

        <div class='row mt-1'>
          <div class='col-md-10 ml-3'>
            <%= f.radio_button :address_option, 1, checked: "checked", class:'blue' %>
            <%= f.label :ご自身の住所 %></br>
            <div class='row mt-1'>
              <div class='col-md-10 ml-5'>
                〒<%= current_member.postal_code %> <%= current_member.address %></br>
                <%= current_member.name_sei %><%= current_member.name_mei %>
              </div>
            </div>


            <%= f.radio_button :address_option, 2, class:'blue' %>
            <%= f.label :登録済住所から選択 %></br>
            <div class='row mt-1'>
              <div class='col-md-10 ml-5'>
                <%= f.collection_select :shipping_address_id, ShippingAddress.all, :id, :select_address, {}, {class: "form-control"} %></br>
              </div>
            </div>

            <%= f.radio_button :address_option, 3, class:'blue' %>
            <%= f.label :新しいお届け先 %></br>
            <div class='row mt-1'>
              <div class='col-md-12 ml-5'>
                <table class="table table-borderless">
                  <tbody>
                    <tr>
                      <td>郵便番号（ハイフンなし）</td>
                      <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
                    </tr>
                    <tr>
                      <td>住所</td>
                      <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", :size =>"60" %></td>
                    </tr>
                    <tr>
                      <td>宛名</td>
                      <td><%= f.text_field :address_name, placeholder: "令和道子" %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

          </div>
        </div>

        <div class='text-center'>
          <%= f.submit "確認画面へ進む", class:'btn btn-primary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>