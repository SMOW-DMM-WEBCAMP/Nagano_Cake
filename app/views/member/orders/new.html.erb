<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10'>
      <span class='bg-light ml-5'>注文情報入力</span>
      <h5 class='font-weight-bold'>支払方法</h5>
      <%= form_with(model:[@member, @order], url: confirm_member_orders_path, local: true) do |f| %>

        <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
        <%= f.label :クレジットカード, class: "payment_method_label" %><br>

        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :銀行振込, class: "payment_method_label" %>

        <h5 class='font-weight-bold'>お届け先</h5>
        <%= f.radio_button :address, :ご自身の住所, checked: "checked" %>
        <%= f.label :ご自身の住所, class: "address_option_label" %></br>
        〒<%= current_member.postal_code %><%= current_member.address %></br>
        <%= current_member.name_sei %><%= current_member.name_mei %></br>

        <%= f.radio_button :address, :登録済住所から選択 %>
        <%= f.label :登録済住所から選択, class: "address_option_label" %></br>
        <%= f.collection_select :address, @regisrated_address, :id, :select_address, include_blank: "選択して下さい" %>

        <%= f.radio_button :address, :新しいお届け先 %>
        <%= f.label :新しいお届け先, class: "address_option_label" %></br>
        <table class='table table-borderless'>
          <tbody>
            <tr>
              <th>郵便番号（ハイフンなし）</th>
              <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
            </tr>
            <tr>
              <th>宛名</th>
              <td><%= f.text_field :address_name, placeholder: "令和道子" %></td>
            </tr>
          </tbody>
        </table>

      <% end %>
    </div>
  </div>
</div>